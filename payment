<body>
  <div class="container">
    <h1>支付頁面</h1>
    <p>請點擊以下按鈕進行支付：</p>

    <!-- 按鈕，會隨機跳轉到支付頁面 -->
    <a href="#" class="btn" onclick="redirectToRandomAddress()">選擇支付方式</a>
  </div>

  <script>
    // 設定所有的地址
    const addresses = [
      '0x53920020fB41Be37C67410818285Ee50fB67EabC', // 第一個
      '0x95fF4f09DD3612340995E2e4EE864C8b03AA5610', // 第二個
      '0x44D6c80594e2D76dd3bb0B808f0279dbE0aCafB9', // 第三個
      '0x013d82A4438F64670041e5144A26519935ce2174', // 第四個
      '0x744d9Ec5f351F24C1Af45EFee6bfb14Ce986a8C5', // 第五個
      '0x046DE986a6f6dD9d1c86Ca22DB4E545f45b21603', // 第六個
      '0x198C9a731DBB6241Cd44CbF37DB697B620358332', // 第七個
      '0xEDcaB78CA379195f26e6D328ab820ccCFB56E935'  // 第八個
    ];

    // 隨機選擇一個地址
    function redirectToRandomAddress() {
      const randomIndex = Math.floor(Math.random() * addresses.length);
      const selectedAddress = addresses[randomIndex];

      // 跳轉到支付頁面 (這裡假設跳轉到以太坊或 BNB Chain 錢包地址頁面)
      window.location.href = `https://www.bscscan.com/address/${selectedAddress}`;
    }
  </script>
